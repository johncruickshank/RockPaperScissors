<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.john.rockpaperscissors.OutcomeActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/computer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="The computer played:"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/computer_result"
        android:layout_width="142dp"
        android:layout_height="81dp"
        tools:text="computer result"
        app:layout_constraintLeft_toRightOf="@+id/computer_text"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="201dp"
        android:layout_height="42dp"
        android:textAlignment="center"
        tools:text="result"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/computer_text"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/player_text"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/player_result"
        android:layout_width="144dp"
        android:layout_height="84dp"
        tools:text="player result"
        app:layout_constraintLeft_toRightOf="@+id/player_text"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="54dp"
        app:layout_constraintBottom_toTopOf="@+id/home_button"
        app:layout_constraintHorizontal_bias="1.0" />

    <EditText
        android:id="@+id/player_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="You played:"
        android:layout_marginBottom="73dp"
        app:layout_constraintBottom_toTopOf="@+id/home_button"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onPlayAgainClicked"
        android:text="Play Again?"
        tools:layout_editor_absoluteX="136dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />
</android.support.constraint.ConstraintLayout>
